<h1><%= title %></h1>
<div>
    <%- messages() %>
</div>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>
<form id="updateAccountForm" action="/account/updateAccount/" method="post">
    <div>
        <label class="top" for="first_name">First Name</label>
        <input type="text" id="first_name" name="account_firstname" value="<%= locals.account_firstname %>" required>
    </div>
    <div>
        <label class="top" for="last_name">Last Name</label>
        <input type="text" id="last_name" name="account_lastname" value="<%= locals.account_lastname %>" required>
    </div>
    <div>
        <label class="top" for="email">Email</label>
        <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" value="<%= locals.account_email %>" required>
    </div>
    <button class="updateAccBtn" type="submit">Update</button>

    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>

<h2>Update Password</h2>
<form id="updatePswdForm" action="/account/updatePassword/" method="post">
    <div>
        <p id="passwordReq">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character.</p>
        <p>*Note your original password will be changed</p>
        <label class="top" for="password">Password</label>
        <input type="password" id="password" name="account_password"  pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <span id="passwordReq">Passwords must be minimum 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <span id="pswdBtn" type="button">Show Password</span>
    </div>
    <button class="updatePswdBtn" type="submit">Change Password</button>

    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <% } %>>
</form>

<script src="/js/showpassword.js"></script>