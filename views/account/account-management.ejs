<h1><%= title %></h1>
<div>
    <%- messages() %>
</div>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>

<p>You're logged in</p>
<p>Account Type: <%= locals.accountData.account_type %></p>
<p><a href="/account/update/<%= locals.accountData.account_id %>">Edit Account Information</a></p>
<p><a href="/account/wishlist/<%= locals.accountData.account_id%>">View Wishlist</a></p>

<% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <h2>Inventory Management</h2>
    <a href="/inv/">Manage Inventory</a> <% }
%>