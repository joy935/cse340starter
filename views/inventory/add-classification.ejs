<h1><%= title %></h1>
<div>
    <%- messages() %>
</div>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>
<form id="addClassification-form" method="post" action="/inv/type">
        <p>Field is required</p>
        <div>
            <label class="top" for="classification_name">Classification Name</label>
            <span class="direction">Name must be alphabetic characters only.</span>
            <input type="text" id="classification_name" name="classification_name" pattern="[A-Za-z]+" required>
        </div>
        <button id="addClassficationBtn" type="submit">Add Classification</button>
</form>